<MudText Class="ma-2" Typo="Typo.h6">
    <MudHighlighter Text="@Title"
            HighlightedTexts="@HighlightedTexts"
            Class="pa-1 mud-elevation-2 mud-theme-error" />
</MudText>
<MudDivider></MudDivider>
<MudText Class="ma-2">
    <MudHighlighter Text="@Text"
            HighlightedTexts="@HighlightedTexts"
            Class="pa-1 mud-elevation-2 mud-theme-info">
        
    </MudHighlighter>
</MudText>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public string[] HighlightedTexts { get; set; }
}
