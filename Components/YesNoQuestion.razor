
<MudPaper Class="d-flex align-center flex-grow-1 gap-4" Elevation="0">

</MudPaper>

<MudText Typo="Typo.h3" Align="Align.Center">@Question.question</MudText>

<MudPaper Class="d-flex justify-space-around flex-grow-1 gap-4 my-10 px-16" Elevation="0">
    <MudButton OnClick="() => AnswerQuestion(true)" Variant="Variant.Filled" Color="Color.Success" FullWidth Style="height:60px">Yes</MudButton>
    <MudButton OnClick="() => AnswerQuestion(false)" Variant="Variant.Filled" Color="Color.Error" FullWidth Style="height:60px">No</MudButton>
</MudPaper>

@if (answered)
{
    <MudText Typo="Typo.h6" Align="Align.Center">Info: @Question.description</MudText>
}



@code {
    [Parameter]
    public Question Question { get; set; }
    private bool answered = false;

    private void AnswerQuestion(bool isYes)
    {
        Question.isYes = isYes;
        answered = true;
    }

}
