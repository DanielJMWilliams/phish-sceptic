
<MudPaper Class="d-flex align-center flex-grow-1 gap-4" Elevation="0">

</MudPaper>

<MudText Typo="Typo.h3" Align="Align.Center">@Question.question</MudText>

<MudPaper Class="d-flex justify-space-around flex-grow-1 gap-4 my-10 px-16" Elevation="0">
    <MudButton OnClick="() => AnswerQuestion(true)" Variant="Variant.Filled" Color="@yesColor" FullWidth Style="height:60px">Yes</MudButton>
    <MudButton OnClick="() => AnswerQuestion(false)" Variant="Variant.Filled" Color="@noColor" FullWidth Style="height:60px">No</MudButton>
</MudPaper>

@if (answered)
{
    <MudText Typo="Typo.h6" Align="Align.Center">Info: @Question.description</MudText>
}



@code {
    [Parameter]
    public Question Question { get; set; }
    [Parameter] public Action OnAnswer { get; set; }

    private bool answered = false;

    private Color yesColor = Color.Success;
    private Color noColor = Color.Error;

    private void AnswerQuestion(bool isYes)
    {
        if (isYes)
        {
            noColor = Color.Dark;
            yesColor = Color.Success;
        }
        else
        {
            yesColor = Color.Dark;
            noColor = Color.Error;
        }

        Question.isYes = isYes;
        answered = true;
        OnAnswer.Invoke();
        StateHasChanged();
    }

}
