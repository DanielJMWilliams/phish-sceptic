<MudText Class="ma-2" Typo="Typo.h6">
    <MultiHighlighter Text="@Title"
                        HighlightedTexts="@HighlightedTexts"
                        Class="pa-1 mud-elevation-2"
                        Colors="@Colors" />
                
</MudText>
<MudText Class="ma-2">
    <MultiHighlighter Text="@Text"
                        HighlightedTexts="@HighlightedTexts"
                        Class="pa-1 mud-elevation-2"
                        Colors="@Colors" />
</MudText>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public string[] HighlightedTexts { get; set; }
    [Parameter] public string[] Colors { get; set; }
}
