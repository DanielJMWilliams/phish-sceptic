@using MudBlazor
@inject IDialogService DialogService

<MudTooltip Text="Help" Placement="Placement.Right">
    <MudIconButton OnClick="OpenDialog" Icon="@Icons.Material.Filled.Help"></MudIconButton>
</MudTooltip>

@code {

    [Parameter] public string HelpText { get; set; }

    private void OpenDialog(){

        //var options = new DialogOptions() { MaxWidth = MaxWidth.Medium, FullWidth = true };
        var options = new DialogOptions() { FullScreen = true, CloseButton = true };
        DialogService.Show<UrgencyInspectorHelpDialog>("UrgencyInspectorDialog", options);
    }

}
